<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Assignment2_FXML.Controller">
   <children>
      <BorderPane prefHeight="200.0" prefWidth="200.0">
         <top>
            <Label text="Writer Thread Logger" BorderPane.alignment="CENTER" />
         </top>
         <center>
            <ListView prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
         </center>
         <bottom>
            <VBox prefHeight="50.0" prefWidth="100.0" BorderPane.alignment="CENTER">
               <children>
                  <Label text="Transmitted:" textAlignment="CENTER" />
                  <Label text="Transmitted string goes here" textAlignment="CENTER" />
               </children>
            </VBox>
         </bottom>
      </BorderPane>
       <VBox prefHeight="200" prefWidth="200">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" prefWidth="200" text="Concurrent Tester" textAlignment="CENTER" />
            <RadioButton mnemonicParsing="false" text="Syncronous Mode" />
            <RadioButton mnemonicParsing="false" text="Asyncronous Mode" />
            <Label text="String to Transfer" />
            <TextField />
            <Button mnemonicParsing="false" text="Run" />
            <Label text="Running status" />
            <Label alignment="CENTER" prefHeight="50" prefWidth="150" style="-fx-background-color: green; -fx-border-color: black;" />
            <Label text="Status goes here" />
            <Button mnemonicParsing="false" text="Clear" />
         </children></VBox>
      <BorderPane prefHeight="200.0" prefWidth="200.0">
         <top>
            <Label text="Label" BorderPane.alignment="CENTER" />
         </top>
         <center>
            <ListView prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
         </center>
         <bottom>
            <VBox prefHeight="50.0" prefWidth="100.0" BorderPane.alignment="CENTER">
               <children>
                  <Label text="Received:" />
                  <Label text="Received string goes here" />
               </children></VBox>
         </bottom>
      </BorderPane>
   </children>
</HBox>
